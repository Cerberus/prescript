{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
